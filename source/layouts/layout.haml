!!! 5
%html
  %head
    %meta{ charset: "utf-8" }
    %meta{ content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1" }
    %meta{ content: "Dave Rapin", name: "author" }
    %meta{ content: "Meta description goes here.", name: "description" }
    %title= current_page.data.title || "Default Title"
    %link{ href: 'http://fonts.googleapis.com/css?family=Playfair+Display:400,400italic,700italic', rel: 'stylesheet', type: 'text/css' }
    = stylesheet_link_tag "all"
    = javascript_include_tag "all"
  
  %body{ class: page_classes }
    .outer.header-wrapper= partial "_modules/header"
    .outer.content-wrapper
      %section.content= yield
    .outer.footer-wrapper= partial "_modules/footer"
